<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBlack"
    tools:context="ag.aboutme_android_lesson_2.MainActivity"
    android:id="@+id/get_image">

    <TextView
        android:textSize="@dimen/bg_text_size"
        android:textColor="@color/txt_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_txt"
        android:id="@+id/my_txt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="@dimen/sm_text_size"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fio"
        android:id="@+id/fio"
        android:layout_alignTop="@+id/skills"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prosto_text"
        android:id="@+id/get_fio"
        android:layout_below="@+id/fio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:background="@color/colorWhite"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:id="@+id/my_image"
        android:layout_below="@+id/my_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />
    <TextView
        android:textSize="@dimen/sm_text_size"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skill"
        android:id="@+id/skills"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/my_skills"
        android:layout_alignStart="@+id/my_skills" />
    <TextView
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prosto_text"
        android:id="@+id/my_skills"
        android:layout_alignTop="@+id/get_fio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="onButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_btt1"
        android:id="@+id/btt1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
